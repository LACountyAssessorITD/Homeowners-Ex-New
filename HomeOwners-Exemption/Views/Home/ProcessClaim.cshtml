    /////////////////////////////////////////////////////////////////////
    // For Other Status
    /////////////////////////////////////////////////////////////////////
    function Add() {
        if ($("#txtClaimID_1").val() == "")
            alert("Claim# cannot be empty.");
        else if ($("#txtClaimID_1").val().length < 7)
            alert("Claim# must be 7 digits.");
        else
        { 
            AddRow($("#txtClaimID_1").val());
            $("#txtClaimID_1").val("");
        }
    };

    function AddRow(claimid) {
        var tBody = $("#tblClaims_1 > TBODY")[0];

        //Add Row.
        row = tBody.insertRow(-1);

        //Add ClaimID cell.
        var cell = $(row.insertCell(-1));
        cell.html(claimid);

        //Add Button cell.
        cell = $(row.insertCell(-1));
        var btnRemove = $("<img />");
        btnRemove.attr("src", "/img/minus-circle-solid.svg");
        btnRemove.attr("style", "height:30px;width:30px;");
        btnRemove.attr("onclick", "Remove(this);");
        btnRemove.val("Remove");
        cell.append(btnRemove);
    };

    function Remove(button) {
        //Determine the reference of the Row using the Button.
        var row = $(button).closest("TR");
        var name = $("TD", row).eq(0).html();
        if (confirm("Do you want to delete Claim #: " + name)) {
            //Get the reference of the Table.
            var table = $("#tblClaims_1")[0];

            //Delete the Table row using it's Index.
            table.deleteRow(row[0].rowIndex);
        }
    };

     // Send the data to the controller when click the "Process" button
    $(document).ready(function () {
        $('#SubmitProcess').on('click', function () {
            var claimIDs = [];

            //Get the values from the cells
            var tbl = document.getElementById("tblClaims_1");         
            var tblRows = tbl.getElementsByTagName("tr");
            if (tblRows.length > 3) {
                for (var i = 1; i<tblRows.length-2; i++) {
                    claimIDs.push(tbl.rows[i].cells[0].innerHTML);
                }
            }

            // Get the value from the input text box
            claimIDs.push(document.getElementById("txtClaimID_1").value);

            // Get the claim status
            var e = document.getElementById("ddClaimStatus");
            var status = e.options[e.selectedIndex].value;

            // Get the supervisor assignee
            e = document.getElementById("ddSupervisors");
            var supervisorAssignee = e.options[e.selectedIndex].value;

            // Get the staff assignee
            e = document.getElementById("ddStaffs");
            var staffAssignee = e.options[e.selectedIndex].value;

            if (supervisorAssignee == "0")
                alert("Supervisor cannot be empty.");
            else {
                $.ajax({
                    url: '@Url.Action("ProcessOtherStatus", "Home")',
                    type: "POST",
                    data: { ClaimIDList: claimIDs, ClaimStatus: status, AssigneeSupervisor: supervisorAssignee, AssigneeStaff: staffAssignee },
                    traditional: true,
                    success: function (data) {
                        if (data == "0")
                            alert("Fail to process!");
                        else {
                            alert("Processed!");
                            window.location = '../Home/ProcessClaim';
                        }
                    },
                    error: function () {
                        alert("Fail to process!");
                    }
                });
            }
        });
    });

    $(document).ready(function () {
        $('#txtClaimID_1').on('keypress', function () {
            if (event.keyCode == 13) {
                if ($("#txtClaimID_1").val() == "")
                    alert("Claim# cannot be empty.");
                else if ($("#txtClaimID_1").val().length < 7)
                    alert("Claim# must be 7 digits.");
                else
                    Add();
            }
        });
    });
