    <tr>
        <td width="350px">
            <label style="font-weight:bold;">
                Claim Status:
                @Html.DropDownListFor(model => model.ClaimStatus, Model.StatusList, new { style = "width:250px;", @id = "ddClaimStatus", @class = "form-control", @label = "Claim Status:", autofocus = "autofocus" })
            </label>
        </td>
        <td width="400px">
