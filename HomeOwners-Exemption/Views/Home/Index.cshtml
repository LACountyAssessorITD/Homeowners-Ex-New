@model dynamic

@{
    ViewData["Title"] = "Home Page";
}

<div class="index-section container-fluid h-100 pt-3 px-4">
    <h3>Dashboard</h3>
    <div class="row">
        <div class="col-6 pr-1">
            <div class="w-100 bg-1">
                <p class="text-center mb-0">Claim by Status</p>
            </div>
        </div>
        <div class="col-6 pl-1">
            <div class="w-100 bg-1">
                <p class="text-center mb-0">Status by Staff</p>
            </div>
        </div>
    </div>
    <div class="row dashboard-1 ">

        <div class="col-6 border sub-dash shadow-inset">

            <div class=" w-100">
                <div class="row">
                    <div class="col-6">
                        <div class="w-100">
                            <p class="text-center">Claim Status</p>
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="w-100">
                            <p class="text-center">Count</p>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="w-100">
                            <p class="text-center">Timely</p>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="w-100">
                            <p class="text-center">Late</p>
                        </div>
                    </div>
                </div>
                @for (int i = 0; i < Model.status.Count; i++)
                {
                    <div class="row">
                        <div class="col-6">
                            <p>@Model.status[i]</p>
                        </div>
                        <div class="col-2">
                            <p>@Model.statusId[Model.status[i]].Count</p>
                        </div>
                        <div class="col-2">
                            <p>@Model.statusId[Model.status[i]].Current</p>
                        </div>
                        <div class="col-2">
                            <p>@Model.statusId[Model.status[i]].Late</p>
                        </div>
                    </div>

                }
            </div>
        </div>
        <div class="col-6 border sub-dash2 shadow-inset" >

            <div class="h-100 w-100">
                <div class="row">
                    <div class="col-4">
                        <div class="w-100">
                            <p class="text-center">Staff</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="w-100">
                            <p class="text-center">Unworked</p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="w-100">
                            <p class="text-center">Worked</p>
                        </div>
                    </div>

                </div>
                @for (int i = 0; i < Model.staff.Count; i++)
                {
                    <div class="row">
                        <div class="col-4">
                            <p>@Model.staff[i].Users</p>
                        </div>
                        <div class="col-4">
                            <p></p>
                        </div>
                        <div class="col-4">
                            <p></p>
                        </div>

                    </div>

                }

            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <div class="w-100 bg-1">
                <p class="text-center mb-0">My Claims</p>
            </div>
        </div>
        
    </div>
    <div class="row dashboard-1 ">

        <div class="col-12 border sub-dash shadow-inset "style="max-width: 100%; margin: 0;" >

            <div class=" w-100">
                <div class="row">
                    <div class="col-custom">
                        <div class="w-100">
                            <p class="text-center">Claim#</p>
                        </div>
                    </div>

                    <div class="col-custom">
                        <div class="w-100">
                            <p class="text-center">AIN</p>
                        </div>
                    </div>
                    <div class="col-custom">
                        <div class="w-100">
                            <p class="text-center">Days</p>
                        </div>
                    </div>
                    <div class="col-custom">
                        <div class="w-100">
                            <p class="text-center">Last Updated</p>
                        </div>
                    </div>
                    <div class="col-custom">
                        <div class="w-100">
                            <p class="text-center">Status</p>
                        </div>
                    </div>
                </div>
                @for (int i = 0; i < Model.claims.Count; i++)
                {
                <div class="row">
                    <div class="col-custom">
                        <p></p>
                        <a asp-action="Claim" asp-controller="Home" asp-route-id="@Model.claims[i].ClaimId">@Model.claims[i].ClaimId</a>
                    </div>
                    <div class="col-custom">
                        <p>@Model.claims[i].currentAPN</p>
                    </div>
                    <div class="col-custom">
                        <p>@Model.claims[i].Days</p>
                    </div>
                    <div class="col-custom">
                        <p>@Model.claims[i].ModifiedDate</p>
                    </div>
                    <div class="col-custom">
                        <p>@Model.claims[i].ClaimStatusRef</p>
                    </div>
                </div>

                }
            </div>
        </div>
        
    </div>
</div>